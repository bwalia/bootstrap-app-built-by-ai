<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">Enquiries</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button class="btn btn-jira-primary" data-bs-toggle="modal" data-bs-target="#addEnquiryModal">
                <i class="fas fa-plus"></i> Add Enquiry
            </button>
        </div>
    </div>
</div>

<div class="jira-card">
    <div class="jira-card-header">
        <i class="fas fa-question-circle"></i> Enquiries List
    </div>
    <div class="jira-card-body">
        <div class="table-responsive">
            <table id="enquiriesTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Subject</th>
                        <th>Status</th>
                        <th>Priority</th>
                        <th>Workspace</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Data will be loaded here -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Enquiry Modal -->
<div class="modal fade" id="addEnquiryModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Enquiry</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addEnquiryForm">
                    <div class="mb-3">
                        <label for="enquiryName" class="form-label">Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="enquiryName" required>
                    </div>
                    <div class="mb-3">
                        <label for="enquiryEmail" class="form-label">Email <span class="text-danger">*</span></label>
                        <input type="email" class="form-control" id="enquiryEmail" required>
                    </div>
                    <div class="mb-3">
                        <label for="enquiryPhone" class="form-label">Phone</label>
                        <input type="tel" class="form-control" id="enquiryPhone">
                    </div>
                    <div class="mb-3">
                        <label for="enquirySubject" class="form-label">Subject <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="enquirySubject" required>
                    </div>
                    <div class="mb-3">
                        <label for="enquiryMessage" class="form-label">Message</label>
                        <textarea class="form-control" id="enquiryMessage" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="enquiryStatus" class="form-label">Status</label>
                        <select class="form-control" id="enquiryStatus">
                            <option value="new">New</option>
                            <option value="in-progress">In Progress</option>
                            <option value="resolved">Resolved</option>
                            <option value="closed">Closed</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="enquiryPriority" class="form-label">Priority</label>
                        <select class="form-control" id="enquiryPriority">
                            <option value="low">Low</option>
                            <option value="medium">Medium</option>
                            <option value="high">High</option>
                            <option value="urgent">Urgent</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-jira-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-jira-primary" onclick="addEnquiry()">Add Enquiry</button>
            </div>
        </div>
    </div>
</div>