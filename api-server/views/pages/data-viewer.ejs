<!-- Redis Data Viewer -->
<div class="row mt-4">
    <div class="col-12">
        <div class="jira-card">
            <div class="jira-card-header">
                <i class="fas fa-database"></i> Redis Database Viewer
            </div>
            <div class="jira-card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="input-group">
                            <input type="text" class="form-control" id="redisKeyInput" placeholder="Enter Redis key">
                            <button class="btn btn-jira-primary" onclick="getRedisValue()">
                                <i class="fas fa-search"></i> Get Value
                            </button>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <button class="btn btn-jira-secondary" onclick="getAllRedisKeys()">
                            <i class="fas fa-list"></i> List All Keys
                        </button>
                        <button class="btn btn-jira-danger" onclick="clearRedisData()">
                            <i class="fas fa-trash"></i> Clear All
                        </button>
                    </div>
                </div>
                
                <div id="redisResults" class="mt-3">
                    <!-- Redis data will be displayed here -->
                </div>
            </div>
        </div>
    </div>
