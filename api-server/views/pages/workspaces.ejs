<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">Workspaces</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button class="btn btn-jira-primary" data-bs-toggle="modal" data-bs-target="#addWorkspaceModal">
                <i class="fas fa-plus"></i> Add Workspace
            </button>
        </div>
    </div>
</div>

<div class="jira-card">
    <div class="jira-card-header">
        <i class="fas fa-building"></i> Workspaces List
    </div>
    <div class="jira-card-body">
        <div class="table-responsive">
            <table id="workspacesTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Machine Name</th>
                        <th>Description</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Data will be loaded here -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Workspace Modal -->
<div class="modal fade" id="addWorkspaceModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Workspace</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addWorkspaceForm">
                    <div class="mb-3">
                        <label for="workspaceName" class="form-label">Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="workspaceName" required>
                    </div>
                    <div class="mb-3">
                        <label for="workspaceMachineName" class="form-label">Machine Name</label>
                        <input type="text" class="form-control" id="workspaceMachineName" placeholder="Auto-generated from name">
                    </div>
                    <div class="mb-3">
                        <label for="workspaceDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="workspaceDescription" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-jira-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-jira-primary" onclick="addWorkspace()">Add Workspace</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Workspace Modal -->
<div class="modal fade" id="editWorkspaceModal" tabindex="-1" aria-labelledby="editWorkspaceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editWorkspaceModalLabel">Edit Workspace</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editWorkspaceForm">
                    <input type="hidden" id="editWorkspaceId">
                    <div class="mb-3">
                        <label for="editWorkspaceName" class="form-label">Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="editWorkspaceName" required>
                    </div>
                    <div class="mb-3">
                        <label for="editWorkspaceMachineName" class="form-label">Machine Name</label>
                        <input type="text" class="form-control" id="editWorkspaceMachineName">
                    </div>
                    <div class="mb-3">
                        <label for="editWorkspaceDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="editWorkspaceDescription" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="editWorkspaceStatus" class="form-label">Status</label>
                        <select class="form-control" id="editWorkspaceStatus">
                            <option value="active">Active</option>
                            <option value="inactive">Inactive</option>
                            <option value="pending">Pending</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-jira-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-jira-primary" onclick="updateWorkspace()">Update Workspace</button>
            </div>
        </div>
    </div>
</div>
