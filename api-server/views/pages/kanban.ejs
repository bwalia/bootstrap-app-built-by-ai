<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">Kanban Board</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button class="btn btn-jira-primary" data-bs-toggle="modal" data-bs-target="#addTaskModal">
                <i class="fas fa-plus"></i> Add Task
            </button>
        </div>
    </div>
</div>

<div class="kanban-board">
    <div class="row">
        <div class="col-md-3">
            <div class="kanban-column">
                <div class="kanban-header">
                    <h5>To Do</h5>
                    <span class="badge bg-secondary" id="todo-count">0</span>
                </div>
                <div class="kanban-body" id="todo-column">
                    <!-- Tasks will be loaded here -->
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="kanban-column">
                <div class="kanban-header">
                    <h5>In Progress</h5>
                    <span class="badge bg-primary" id="progress-count">0</span>
                </div>
                <div class="kanban-body" id="progress-column">
                    <!-- Tasks will be loaded here -->
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="kanban-column">
                <div class="kanban-header">
                    <h5>Review</h5>
                    <span class="badge bg-warning" id="review-count">0</span>
                </div>
                <div class="kanban-body" id="review-column">
                    <!-- Tasks will be loaded here -->
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="kanban-column">
                <div class="kanban-header">
                    <h5>Done</h5>
                    <span class="badge bg-success" id="done-count">0</span>
                </div>
                <div class="kanban-body" id="done-column">
                    <!-- Tasks will be loaded here -->
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Task Modal -->
<div class="modal fade" id="addTaskModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Task</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addTaskForm">
                    <div class="mb-3">
                        <label for="taskTitle" class="form-label">Title <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="taskTitle" required>
                    </div>
                    <div class="mb-3">
                        <label for="taskDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="taskDescription" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="taskPriority" class="form-label">Priority</label>
                        <select class="form-select" id="taskPriority">
                            <option value="low">Low</option>
                            <option value="medium" selected>Medium</option>
                            <option value="high">High</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="taskAssignee" class="form-label">Assignee</label>
                        <select class="form-select" id="taskAssignee">
                            <option value="">Unassigned</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-jira-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-jira-primary" onclick="addTask()">Add Task</button>
            </div>
        </div>
    </div>
</div>
